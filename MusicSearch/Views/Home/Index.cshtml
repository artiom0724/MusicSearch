<style>
    .image {
        position: relative;
        width: 100%;
        max-width: 300px;
    }

    h2 {
        position: absolute;
        top: 200px;
        left: 0;
        width: 100%;
        color: white;
        background-color: rgba(0,0,0,.3);
    }
</style>

<div class="row">
  @foreach (var item in @ViewBag.authors)
  {    
        <a href="/Home/Albums/@item.name">
            <div class="col-md-2" style="min-height:300px; min-width:300px; padding:3px 3px 3px 3px">
                <div class="image">
                    <img src="@item.imageLarge" alt="" width="300" height="300"/>
                    <h2>@item.name<br />Listeners: @item.listeners</h2>
                </div>
            </div>
        </a>   
  }
</div>