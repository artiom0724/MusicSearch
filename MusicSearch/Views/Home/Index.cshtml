@using MusicSearch.Models
@model List<Artist>
@{
    ViewBag.Title = "Artists";
}

<div class="row">
    <div class="col-md-12">
        <div id="scrolList">
            @Html.Partial("_Items", Model)
        </div>
    </div>
</div>   
@if (Model != null || Model.Count() > 20)
{
    <img id="loading" src="http://www.playcast.ru/uploads/2016/02/23/17479109.gif" style="width:auto;margin-left:40%; margin-right:40%" height="80">
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/ScrollingArtists.js"></script>