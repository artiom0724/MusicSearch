@using MusicSearch.Models
@model AllArtists
@{
    ViewBag.Title = "Artists";
}

<div class="row">
@if (Model.LocalArtists != null && Model.LocalArtists.Count>0)
{
    <div class="col-md-12">
        <h3>Local:</h3>     
            <div id="localList">
                @Html.Partial("_Items", Model.LocalArtists)
            </div> 
    </div>
    <hr />
}
    <div class="col-md-12">
        <h3>Online:</h3>
        <div id="scrolList">
            @Html.Partial("_Items", Model.OnlineArtists)
        </div>
    </div>
</div>   
@if (Model.OnlineArtists != null || Model.OnlineArtists.Count() > 20)
{
    <img id="loading" src="http://www.playcast.ru/uploads/2016/02/23/17479109.gif" style="width:auto;margin-left:40%; margin-right:40%" height="80">
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/ScrollingArtists.js"></script>