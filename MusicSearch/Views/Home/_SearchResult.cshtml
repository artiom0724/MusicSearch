@using MusicSearch.Models
@model SearchResult
@if (Model != null)
{
    <h3>Artists:</h3>
    <div id="scrolListArtists">
        @Html.Partial("_Items", Model.Artists)
    </div>
    <img id="loadingArtists" src="http://www.playcast.ru/uploads/2016/02/23/17479109.gif" style="width:auto;margin-left:40%; margin-right:40%" height="80">
    if (Model.Artists.Count > 23)
    {
        <button class="btn" style="min-width:20%; min-height:30px" id="addA" OnClick="addArtists()">More Artists...</button>
    }
    
    <hr />
    <h3>Albums:</h3>
    <div id="scrolListAlbums">
        @Html.Partial("_Albums", Model.Albums)
    </div>
    <img id="loadingAlbums" src="http://www.playcast.ru/uploads/2016/02/23/17479109.gif" style="width:auto;margin-left:40%; margin-right:40%" height="80">
    if (Model.Albums.Count > 23)
    {
        <button class="btn" style="min-width:20%; min-height:30px" id="addAlbums" OnClick="addAlbums()">More Albums...</button>
    }   

    <hr />
    <h3>Tracks:</h3>
    <div id="scrolListTracks">
        @Html.Partial("Tracks", Model.Tracks)
    </div>
    <img id="loadingTracks" src="http://www.playcast.ru/uploads/2016/02/23/17479109.gif" style="width:auto;margin-left:40%; margin-right:40%" height="80">
    if (Model.Tracks.Count > 23)
    {
        <button class="btn" style="min-width:20%; min-height:30px" id="addTracks" OnClick="addTracks()">More Tracks...</button>
    }
}
else
{
    <h1 id="message"> No more search result at site...</h1>
}

