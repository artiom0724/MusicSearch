@using MusicSearch.Models
@model List<Album>
@{
    var path = Request.Url.AbsolutePath.ToString();
    ViewBag.Title = "Albums";
}

<div id="scrolList">
    @Html.Partial("_Albums")
</div>
<div id="loading"><img src="https://image.jimcdn.com/app/cms/image/transf/none/path/s235300062ee859d7/image/i0cdbddbbf43fbfba/version/1326800763/image.gif"></div>
<p id="artist"></p>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script type="text/javascript">
$(function () {
 
    $('div#loading').hide();
 
        var page = 1;
    var _inCallback = false;
    function loadItems() {
        if (page > 0 && !_inCallback) {
            _inCallback = true;
            page++;
            $('div#loading').show();

            $.ajax({
                type: 'GET',
                url: document.getElementById("artist") + '?numPage=' + page.toString(),
                success: function (data, textstatus) {
                    if (data != '') {
                        $("#scrolList").append(data);
                    }
                    else {
                        page = 1;
                    }
                    _inCallback = false;
                    $("div#loading").hide();
                }
            });
        }
    }
    
    $(window).scroll(function () {
        if ($(window).scrollTop() == $(document).height() - $(window).height()) { 
            loadItems();
        }
    });
})
</script>